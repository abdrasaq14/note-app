doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Login Page
    link(rel='stylesheet', href='../stylesheets/login.css')
  body
    
    if zodError
      p.zod-error Error: #{zodError}

    else if error 
      p.database-error Error: #{error}
    else if invalidPassword 
      p.database-error Error: #{invalidPassword}
    else if noSuchUserError
      p.no-such-user-error
        | #{noSuchUserError}
        br
        | Click
        a(href="/users/signup", class="signup-link")  here   
        | to signup

    else if invalidPassword 
      p.invalid-password Error: #{invalidPassword}
    else if success 
      p.success-message Success: #{success}

    form(action='/users/login', method='post')
      .existing-note-wrapper 
        h1.existing-note Login
        img(src="../img/curve.png", alt="", class="existing-note-img", srcset="")

      label(for='email') 
        | Email:
      br
      input(type='email', id='email', name='email', placeholder="enter your email here", required)

      br
      label(for='password') 
        | Password:
      br
      input(type='password', id='password', name='password', placeholder="enter your password here", required)
      br
      .btn-wrapper
        button(type='submit') Login
