doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Signup Page
    link(rel='stylesheet', href='../stylesheets/signup.css')
  body
    
  if zodError
    p.zod-error #{zodError}
  else if databaseError
    p.database-error #{databaseError}
  else if EmailExistError 
    p.email-exist-error #{EmailExistError}
      |   Click
      a(href="/users/login", class="login-link")   here  
      | to login 
  if insertUserDetailIntoDatabase 
    p.account-successfull-message #{insertUserDetailIntoDatabase}
      | ,   Click
      a(href="/users/login", class="login-link")   here  
      | to login
    
  form(action='/users/signup', method='post', enctype="application/x-www-form-urlencoded")
    .existing-note-wrapper 
      h1.existing-note Signup
      img(src="../img/curve.png", alt="", class="existing-note-img", srcset="")
    label(for='fullname')
      | Full Name:
    br
    input(type='text', id='fullname', name='fullname', placeholder="enter your fullname here", required)
    
    br
    label(for='status', class="gender-label") Gender:
      .gender-option-wrapper
        input(type='radio', id='gender-male' class="gender-input", name='gender', value='Male', required)
        label(for='gender-male', class="gender-male") Male
                
      .gender-option-wrapper
        input(type='radio', id='gender-female', class="gender-input", name='gender', value='Female', required)   
        label(for='gender-female', class="gender-female") Female
      
    br

    label(for='email')
      | Email:
    br
    input(type='email', id='email', name='email', placeholder="enter your email here", required)
    
    br
    label(for='phone')
      | Phone:
    br
    input(type='text', id='phone', name='phone', required, value='+234', placeholder="enter your phone number without the first 0 digit e.g 8100000000", class='prefilled-phone')
    
    br
    label(for='address')
      | Address:
    br
    input(type='text', id='address', name='address', placeholder="enter your address here",)

    br
    label(for='password')
      | Password:
    br
    input(type='password', id='password', name='password', placeholder="password must be at least 6 character", required)

    .btn-wrapper
      button(type='submit') Signup
  
  script(src="../js/signup.js") 


    